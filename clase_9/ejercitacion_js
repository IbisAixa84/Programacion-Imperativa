/*6) Escribí un programa que imprima los números pares del 0 al
100.*/

function imprimirNumerosPares(nInicial, nFinal, nContador) {
    for (let i = nInicial; i <= nFinal; i += nContador) {
        console.log(i)
    }
}

imprimirNumerosPares(0, 100, 2)

